    <Key mask="C" key="Left">sendl</Key>

    <!-- Key applications. -->
    <Key mask="AC" key="t">exec:sakura </Key>
    <Key mask="AC" key="d">showdesktop </Key>
    <Key mask="AC" key="w">exec:firefox </Key>
    <Key key="Print">exec:scrot '%Y-%m-%d_%H:%M:%S.png' -e 'mv $f ~/Screenshots/' &amp;&amp; sleep 1 &amp;&amp; notify-send 'Screenshot has been saved in ~/Screenshots'</Key>

    <Key mask="CA" key="BackSpace">exec:jwm -exit</Key>
    <!-- Key system. -->
